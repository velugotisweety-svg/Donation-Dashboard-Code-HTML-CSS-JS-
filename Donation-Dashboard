<body>

<h1>Donation Tracking Dashboard</h1>

<div class="cards">
    <div class="card">
        <h2 id="totalDonations">$0</h2>
        <p>Total Donations Received</p>
    </div>

    <div class="card">
        <h2 id="donorCount">0</h2>
        <p>Number of Donors</p>
    </div>
</div>

<div class="table-container">
    <h2 style="text-align:center;">Donation Trend Table</h2>
    <table id="donationTable">
        <tr>
            <th>Date</th>
            <th>Donor Name</th>
            <th>Amount ($)</th>
        </tr>
    </table>
</div>

<h2 style="text-align:center;">Donation Trend Chart</h2>
<canvas id="donationChart" width="600" height="300"></canvas>

<script>
// Dummy Donation Data
const donations = [
    { date: "2025-01-01", donor: "Alice", amount: 50 },
    { date: "2025-01-05", donor: "Bob", amount: 20 },
    { date: "2025-01-10", donor: "Charlie", amount: 100 },
    { date: "2025-01-12", donor: "David", amount: 75 },
    { date: "2025-01-15", donor: "Eva", amount: 30 }
];

// Display Total Donations & Donor Count
document.getElementById("totalDonations").innerText =
    "$" + donations.reduce((sum, d) => sum + d.amount, 0);

document.getElementById("donorCount").innerText = donations.length;

// Fill Table
const table = document.getElementById("donationTable");
donations.forEach(d => {
    let row = `<tr>
        <td>${d.date}</td>
        <td>${d.donor}</td>
        <td>$${d.amount}</td>
    </tr>`;
    table.innerHTML += row;
});

// BAR CHART
const canvas = document.getElementById("donationChart");
const ctx = canvas.getContext("2d");

const barWidth = 50;
const gap = 20;

donations.forEach((d, i) => {
    let x = i * (barWidth + gap) + 50;
    let y = canvas.height - d.amount * 2;

    ctx.fillStyle = "#007bff";
    ctx.fillRect(x, y, barWidth, d.amount * 2);

    ctx.fillStyle = "#333";
    ctx.fillText(d.amount, x + 10, y - 5);
    ctx.fillText(d.donor, x, canvas.height - 10);
});
</script>

</body>
</html>
